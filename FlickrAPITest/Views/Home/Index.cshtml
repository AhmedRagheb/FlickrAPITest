@{
    ViewBag.Title = "Index";
}

<div class="Header">
    <div class="container">
        <div class="row">
            <div class="col-xs-8 col-sm-8 col-md-7 col-lg-7">
                @Html.TextBox("tags", ViewData["tags"], new { placeholder = "Search images", @class = "form-control" })
            </div>
            <div class="col-xs-1 col-sm-1 col-md-2 col-lg-2">
                <h5>
                    <span id="status" class="label label-info"></span>
                </h5>
            </div>
            <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                <a id="link" class="btn btn-primary pull-right">Share</a>
            </div>
        </div>
    </div>
</div>

<div class="container">
    

    <div class="row">
        <div id="pictures">

        </div>
    </div>

</div>



